<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/black</item>

    </style>


    //body text
    <style name="BodyTextView" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="fontFamily">@font/rubik</item>
        <item name="android:textColor">#0C0C0C</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14dp</item>

    </style>

    // topic title
    <style name="TitleTextView" parent="android:TextAppearance.Widget.TextView">
        <item name="android:fontFamily">@font/rubik_bold</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#090909</item>
    </style>





</resources>