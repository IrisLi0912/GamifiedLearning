<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/navgation</item>
        <item name="colorPrimaryDark">@color/navgation</item>
        <item name="colorAccent">@color/black</item>


    </style>


    //customize text style
    //body text
    <style name="BodyTextView" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="fontFamily">@font/rubik</item>
        <item name="android:textColor">#0C0C0C</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14dp</item>


    </style>

    // topic title
    <style name="TitleTextView" parent="android:TextAppearance.Widget.TextView">
        <item name="android:fontFamily">@font/rubik_bold</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#090909</item>
        <item name="android:background">#BFBEBE</item>
    </style>

    //Rating bar
    <style name="RatingBar" parent="android:style/Widget.Material.RatingBar.Small">
        <item name="colorControlNormal">#FFA39D9D</item>#FFA39D9D
        <item name="colorControlActivated">#FB4F89</item>
    </style>

    <style name="LightThemeSelector" parent="android:Theme.Holo.Light">
        <item name="selectableItemBackground">?android:attr/selectableItemBackground</item>

    </style>

    //leaderboard

    <style name="leaderboard" parent="android:TextAppearance.Widget.TextView">
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>

    </style>




</resources>