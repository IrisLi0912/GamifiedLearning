<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/ivProgress"
        android:layout_width="395dp"
        android:layout_height="270dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-1dp"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/btSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        tools:layout_editor_absoluteX="153dp"
        tools:layout_editor_absoluteY="624dp" />

    <TextView
        android:id="@+id/tvQuestionStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question: *Number*"
        android:textAllCaps="false"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="289dp" />

    <EditText
        android:id="@+id/numEntry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="554dp" />

    <ImageView
        android:id="@+id/ivQuestion"
        android:layout_width="271dp"
        android:layout_height="192dp"
        app:srcCompat="@android:drawable/editbox_dropdown_dark_frame"
        tools:layout_editor_absoluteX="62dp"
        tools:layout_editor_absoluteY="343dp" />
</androidx.constraintlayout.widget.ConstraintLayout>