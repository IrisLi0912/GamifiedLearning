<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_topicTitle"
            android:layout_width="245dp"
            android:layout_height="45dp"
            android:background="#D5F4D7"
            android:fontFamily="sans-serif-black"
            android:gravity="center_horizontal"
            android:text="main topic title"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_learnMore"
            android:layout_width="153dp"
            android:layout_height="42dp"
            android:layout_margin="8dp"
            android:background="@drawable/loginbutton"
            android:gravity="center"
            android:text="Learn More"
            android:visibility="visible"
            app:backgroundTint="#B9D4EC" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_topicDes"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="defination of topic" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:srcCompat="@tools:sample/avatars" />

    </LinearLayout>

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:alpha="0.5"
        android:background="@color/teal_200" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="94dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_formulaDes"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:text="formula description" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="208dp"
        android:orientation="vertical">

        <com.youth.banner.Banner
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:alpha="0.5"
        android:background="@color/teal_200" />


    <TextView
        android:id="@+id/tv_topicTitle1"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:background="#D5F4D7"
        android:text="sub topic " />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="94dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_topicDes1"
                android:layout_width="400dp"
                android:layout_height="45dp"
                android:text="subtopic description" />
        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="140dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_formulaDes1"
                android:layout_width="271dp"
                android:layout_height="77dp"
                android:layout_weight="1"
                android:text="Sub topic formula des" />

            <ImageView
                android:id="@+id/iv_image1"
                android:layout_width="106dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:srcCompat="@tools:sample/avatars" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>