<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

<!--warning!!! same as topic_detail.xml-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="69dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:background="#F8CFCF"
                android:text="defination of topic" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="117dp"
            android:layout_height="match_parent"
            android:text="Formula" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/purple_200"
            tools:srcCompat="@tools:sample/avatars" />


    </LinearLayout>

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:alpha="0.5"
        android:background="@color/teal_200" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="94dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_formulaDes"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:background="#9FA6D5"
                android:text="formula description" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="189dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_graph"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F3E39C"
            tools:srcCompat="@tools:sample/avatars" />
    </LinearLayout>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:alpha="0.5"
        android:background="@color/teal_200" />


    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:background="#D5F4D7"
        android:text="sub topic " />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:background="#F8CFCF"
        android:text="defination of topic" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="114dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_subtopicFdes"
                android:layout_width="327dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#8EC3CA"
                android:text="Sub topic formula des" />

            <ImageView
                android:id="@+id/iv_subFormula"
                android:layout_width="140dp"
                android:layout_height="111dp"
                android:layout_weight="1"
                tools:srcCompat="@tools:sample/avatars" />
        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="94dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_subTopicDes"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:background="#9FA6D5"
                android:text="subtopic description" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>