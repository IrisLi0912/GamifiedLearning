<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_topicTitle"
            android:layout_width="219dp"
            android:layout_height="65dp"
            android:background="#D5F4D7"
            android:text="main topic title" />

        <TextView
            android:id="@+id/tv_learnMore"
            android:layout_width="153dp"
            android:layout_height="42dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/loginbutton"
            android:gravity="center"
            android:text="Learn More"
            android:visibility="visible"
            app:backgroundTint="#B9D4EC" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="69dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_topicDes"
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:background="#F8CFCF"
                android:text="defination of topic" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="117dp"
            android:layout_height="match_parent"
            android:text="Formula" />

        <ImageView
            android:id="@+id/iv_formulaImage"
            android:layout_width="284dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/purple_200"
            tools:srcCompat="@tools:sample/avatars" />

    </LinearLayout>

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:alpha="0.5"
        android:background="@color/teal_200" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="94dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_formulaDes"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:background="#9FA6D5"
                android:text="formula description" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="208dp"
        android:orientation="vertical">

        <com.youth.banner.Banner
            android:id="@+id/iv_topicImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:alpha="0.5"
        android:background="@color/teal_200" />


    <TextView
        android:id="@+id/tv_topicTitle1"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:background="#D5F4D7"
        android:text="sub topic " />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="94dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_topicDes1"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:background="#9FA6D5"
                android:text="subtopic description" />
        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="132dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_formulaDes1"
                android:layout_width="327dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#8EC3CA"
                android:text="Sub topic formula des" />

            <ImageView
                android:id="@+id/iv_formulaImage1"
                android:layout_width="106dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:srcCompat="@tools:sample/avatars" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>