<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@drawable/color"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_topicTitle"
                    android:layout_width="256dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Main topic title"
                    android:textAppearance="@style/TitleTextView" />

                <TextView
                    android:id="@+id/tv_learnMore"
                    android:layout_width="139dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:background="@drawable/button"
                    android:drawableLeft="@drawable/link"
                    android:drawablePadding="-2dp"
                    android:elevation="3dp"
                    android:fontFamily="@font/kalam_bold"
                    android:gravity="center"
                    android:text="Learn More"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:visibility="visible"
                    app:backgroundTint="#B9D6EF" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_topicDes"
                    android:layout_width="match_parent"
                    android:layout_height="67dp"
                    android:background="@drawable/layoutborder"
                    android:text="Defination of topic"
                    android:textAppearance="@style/BodyTextView" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="99dp">

                <ImageView
                    android:id="@+id/iv_formulaImage1"
                    android:layout_width="match_parent"
                    android:layout_height="94dp"
                    android:layout_weight="1"
                    tools:srcCompat="@tools:sample/avatars" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_formulaDes"
                    android:layout_width="match_parent"
                    android:layout_height="95dp"
                    android:background="@drawable/layoutborder"
                    android:text="formula description"
                    android:textAppearance="@style/BodyTextView" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="207dp"
                android:orientation="vertical">

                <View
                    android:id="@+id/divider3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black" />

                <com.youth.banner.Banner
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="151dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop" />

                <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black" />

                <TextView
                    android:id="@+id/tv_topicTitle1"
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:gravity="center"
                    android:text="sub topic "
                    android:textAppearance="@style/TitleTextView" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_topicDes1"
                    android:layout_width="match_parent"
                    android:layout_height="95dp"
                    android:background="@drawable/layoutborder"
                    android:text="subtopic description"
                    android:textAppearance="@style/BodyTextView" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_formulaImage"
                    android:layout_width="284dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    tools:srcCompat="@tools:sample/avatars" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_formulaDes1"
                    android:layout_width="match_parent"
                    android:layout_height="106dp"
                    android:layout_weight="1"
                    android:background="@drawable/layoutborder"
                    android:text="Sub topic formula des"
                    android:textAppearance="@style/BodyTextView" />
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>