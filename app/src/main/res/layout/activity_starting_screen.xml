<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".StartingScreenActivity">

    <TextView
        android:id="@+id/tvTitleJourney"
        android:layout_width="0dp"
        android:layout_height="93dp"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/kalam_bold"
        android:text="Journey to Mars"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvHighScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/rubik"
        android:text="TextView"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleJourney" />

    <Button
        android:id="@+id/btStartQuiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Start"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHighScore" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bnBottomBar"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        app:itemBackground="@color/navgation"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/menu_nevigation" />

    <Button
        android:id="@+id/btChapter1"
        android:layout_width="90dp"
        android:layout_height="32dp"
        android:layout_marginEnd="106dp"
        android:layout_marginBottom="150dp"
        android:background="@drawable/button"
        android:fontFamily="casual"
        android:text="Chapter1"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toTopOf="@+id/bnBottomBar"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btChapter2"
        android:layout_width="90dp"
        android:layout_height="32dp"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="296dp"
        android:background="@drawable/button"
        android:fontFamily="casual"
        android:text="Chapter2"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toTopOf="@+id/bnBottomBar"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btChapter3"
        android:layout_width="90dp"
        android:layout_height="32dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="460dp"
        android:background="@drawable/button"
        android:fontFamily="casual"
        android:text="Chapter3"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toBottomOf="@+id/bnBottomBar"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btChapter4"
        android:layout_width="90dp"
        android:layout_height="32dp"
        android:layout_marginTop="264dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/button"
        android:fontFamily="casual"
        android:text="Chapter4"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btChapter5"
        android:layout_width="90dp"
        android:layout_height="32dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="156dp"
        android:background="@drawable/button"
        android:fontFamily="casual"
        android:text="Chapter5"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner_difficulty"
        android:layout_width="129dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="72dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleJourney" />

    <Button
        android:id="@+id/btBadges"
        android:layout_width="51dp"
        android:layout_height="47dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="272dp"
        android:background="@drawable/badge"
        android:tooltipText="My Badges"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.384"
        app:layout_constraintStart_toEndOf="@+id/btInstruction"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btInstruction"
        android:layout_width="56dp"
        android:layout_height="45dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/help"
        android:tooltipText="Instruction"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.017"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvScoreServer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:fontFamily="@font/rubik"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/tvTitleJourney"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvEncourage"
        android:layout_width="243dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="225dp"
        android:text="TextView"
        android:fontFamily="@font/kalam_bold"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvScoreServer" />

</androidx.constraintlayout.widget.ConstraintLayout>