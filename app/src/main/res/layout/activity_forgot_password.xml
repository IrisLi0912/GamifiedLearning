<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="1000dp"
    android:minHeight="450dp"
    android:orientation="vertical"
    tools:context=".ForgotPassword"
    android:background="@drawable/marsbg">


    <EditText
        android:id="@+id/tv_email"
        android:layout_width="341dp"
        android:layout_height="55dp"
        android:layout_below="@+id/textView10"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="44dp"
        android:hint="Email"
        android:textSize="16dp" />

    <TextView
        android:layout_width="296dp"
        android:layout_height="59dp"
        android:layout_below="@+id/tv_email"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="58dp"
        android:background="#C4FDFCFC"
        android:gravity="center"
        android:text="Note: By clicking Send, you will receive an email to reset you password"
        android:textColor="#FD0808" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="232dp"
        android:layout_height="33dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="176dp"
        android:gravity="center"
        android:text="Please enter your email: "
        android:textAlignment="textStart"
        android:textAppearance="@style/TitleTextView"
        android:textSize="16dp"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/textView11"
        style="@style/Widget.AppCompat.TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Reset Password "
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textSize="22dp"
        android:textStyle="bold" />

    <View
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_marginTop="50dp"
        android:background="@color/black" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="52dp"
        android:layout_height="48dp"
        android:src="@drawable/loginmarsicon" />


</RelativeLayout>