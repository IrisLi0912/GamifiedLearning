    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.228"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
